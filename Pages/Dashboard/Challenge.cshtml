@page
@model RiddlesApplication.Pages.Dashboard.ChallengeModel
@{
}

<h1 class="text-center">Challenge Time 😉</h1>

@if (Model.riddleObj != null)
{
    <div class="d-flex justify-content-center align-items-center vh-80">
        <div class="card mt-4" style="width: 60%;">
            @if (Model.errorMessage.Length > 0)
            {
                <div class="alert alert-danger d-flex justify-content-between align-items-center" role="alert" style="width: 100%;">
                    <strong>@Model.errorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }

            @if (Model.successMessage.Length > 0)
            {
                <div class="alert alert-success d-flex justify-content-between align-items-center" role="alert" style="width: 100%;">
                    <strong>💪💪@Model.successMessage💪💪</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }

            <div class="card-body text-center">
                <h5 class="card-title">Challenge</h5>
                <img src="~/css/riddleIcon.png" alt="Icon" class="mb-3" style="width: 200px; height: 200px; border-radius: 50%;" />
                <p class="card-text" style="font-weight: 800; font-size: 30px">@Model.riddleObj.Question</p>
                <form method="post">
                    <div class="mb-3">
                        <label for="answerInput" class="form-label">Igisubizo🐻‍❄:</label>
                        <input type="text" name="answer" class="form-control" id="answerInput" placeholder="Andika igisubizo">
                    </div>
                    <input type="submit" value="Suzuma" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
}
